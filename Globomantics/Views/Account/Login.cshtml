@model Globomantics.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<h4>LoginModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Usernmae" class="control-label"></label>
                <input asp-for="Usernmae" class="form-control" autofocus/>
                <span asp-validation-for="Usernmae" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <p>Or with an account you already have:</p>
        <a class="btn btn-primary" asp-action="LoginWithGoogle" asp-route-returnUrl="@Model.ReturnUrl">Login with Google</a>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

